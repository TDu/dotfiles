conky.config = {
    own_window = true,
    own_window_transparent = true,
    own_window_argb_visual = false,
    own_window_type = 'desktop',
    own_window_hints = 'undecorated,sticky,below,skip_taskbar,skip_pager',

    background = true,
    update_interval = 3,

    cpu_avg_samples = 1,
    net_avg_samples = 1,
    diskio_avg_samples = 1,

    pad_percents = no,

    override_utf8_locale = true,
    short_units = true,
    double_buffer = true,
    no_buffers = true,

    text_buffer_size = 2048,

    border_width = 0,
    border_inner_margin = 0,
    border_outer_margin = 0,

    minimum_width = 170, minimum_height = 1000,
    maximum_width = 270,
    alignment = 'middle_left',
    gap_x = 20,
    gap_y = -35,

    draw_outline = false,
    draw_shades = false,
    border_width = 10,
    draw_borders = false,
    color0 = '#333333',--3b9b86 #e7e357 #e8cf3a #222222
    color1 = '#00374c',
    color2 = '#00374c',
    color3 = '#00374c',
    default_shade_color = '#e8cf3a',--969696
    draw_shades = true,

    draw_borders = false,
    draw_graph_borders = false,
    use_xft = true,
    font = 'noto sans:size=14',
    format_human_readable = true,
    use_spacer = 'none',

    top_name_width = 15,
};

conky.text = [[

# Clock
${alignc 13}${color0}${font Mono:size=20}${time %H:%M}${font}
${alignc 13}${color0}${font Mono:size=11}${time %d %B %Y}${font}

#Display time from different timezone
#${alignc 0}${font Mono:size=12}Geneva ${tztime Europe/Zurich %H:%M}${font}
#To display system updates availlable, does not seem to work
#Updates : ${alignr}${execi 360 aptitude search "~U" | wc -l | tail}
# Moon phases
#
${font Mono:size=12}${execi 1800 cat /home/thierry/log/moon.log} ${font}

Power:${alignr}${battery BAT0}
#$color0${battery_bar BAT0}
${color0}Remaining:${alignr}${battery_time BAT0}

${color0}${alignc}C P U s  & M E M O R Y
${cpubar cpu0}
${cpubar cpu1}
${cpubar cpu2}
${cpubar cpu3}
RAM${alignr}${mem}/${memmax}
$color0$membar
${color0}Swap${alignr}${swap}/${swapmax}
$color0$swapbar

${color0}${alignc}D I S K S
${hr}
Root${alignr}${fs_used /}/${fs_size /}
$color0${fs_bar /}
Home${alignr}${fs_used /home}/${fs_size /home}
$color0${fs_bar /home}
Data${alignr}${fs_used /media/thierry/Backup1}/${fs_size /media/thierry/Backup1}
$color0${fs_bar /media/thierry/Backup1}

${color0}${alignc}N E T W O R K
${hr}
IP${alignr}${addr wlan0}
SSID${alignr}${wireless_essid wlan0}
${color0}${wireless_link_bar wlan0}
]];
